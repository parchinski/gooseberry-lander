---
import { Button } from "@/components/ui/button";
import { Card, CardContent } from "@/components/ui/card";
import { Mail, MessageSquare, Clock, ArrowUpRight } from "lucide-react";
---

<section id="contact" class="py-16 sm:py-20 md:py-24 px-5 sm:px-6 relative z-10">
  <!-- Background accent -->
  <div
    class="absolute inset-0 bg-gradient-to-t from-blue-50/80 via-transparent to-transparent pointer-events-none"
    aria-hidden="true"
  >
  </div>

  <div class="max-w-5xl mx-auto relative z-10">
    <div class="text-center mb-10 sm:mb-16">
      <span
        class="inline-flex items-center gap-2 py-1.5 px-3 sm:px-4 rounded-full bg-white/70 text-blue-600 text-[11px] sm:text-xs font-semibold tracking-wider uppercase mb-4 sm:mb-6 border border-blue-100 backdrop-blur-sm shadow-sm"
      >
        <MessageSquare className="w-3 h-3 sm:w-3.5 sm:h-3.5" />
        Get Started
      </span>
      <h2
        class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold tracking-[-0.02em] mb-4 sm:mb-6 text-foreground font-display"
      >
        Ready to Elevate<br class="hidden sm:block" />Your Event?
      </h2>
      <p
        class="text-base sm:text-lg md:text-xl text-muted-foreground max-w-2xl mx-auto leading-relaxed"
      >
        Let's discuss how we can build the perfect challenge set for your specific requirements.
      </p>
    </div>

    <Card
      className="border-0 shadow-xl sm:shadow-2xl shadow-slate-200/60 bg-white/80 backdrop-blur-xl rounded-2xl sm:rounded-3xl overflow-hidden w-full"
    >
      <CardContent className="p-0 overflow-hidden">
        <div class="grid lg:grid-cols-5">
          <!-- Left side info panel -->
          <div
            class="lg:col-span-2 bg-slate-50/50 p-5 sm:p-10 lg:p-12 flex flex-col justify-between text-foreground relative overflow-hidden border-r border-slate-100"
          >
            <!-- Decorative elements - hidden on mobile -->
            <div
              class="hidden sm:block absolute top-0 right-0 w-64 h-64 bg-blue-500/5 rounded-full blur-3xl"
              aria-hidden="true"
            >
            </div>
            <div
              class="hidden sm:block absolute bottom-0 left-0 w-48 h-48 bg-cyan-500/5 rounded-full blur-2xl"
              aria-hidden="true"
            >
            </div>

            <div class="relative z-10 space-y-4 sm:space-y-6">
              <h3
                class="text-xl sm:text-2xl md:text-3xl font-bold tracking-tight font-display text-slate-900"
              >
                Let's Build<br class="hidden sm:block" />Something Great
              </h3>
              <p class="text-muted-foreground leading-relaxed text-sm sm:text-base">
                Whether you need a single challenge or a complete event package, we're here to help
                bring your vision to life.
              </p>
            </div>

            <div class="relative z-10 space-y-4 sm:space-y-5 mt-6 lg:mt-0">
              <div class="flex items-center gap-3 sm:gap-4">
                <div
                  class="w-10 h-10 sm:w-12 sm:h-12 rounded-lg sm:rounded-xl bg-blue-50 border border-blue-100 flex items-center justify-center"
                >
                  <Clock className="w-4 h-4 sm:w-5 sm:h-5 text-cyan-600" />
                </div>
                <div>
                  <div
                    class="text-[10px] sm:text-xs uppercase tracking-wider text-muted-foreground mb-0.5"
                  >
                    Response time
                  </div>
                  <div class="text-xs sm:text-sm font-medium text-foreground">Within 24 hours</div>
                </div>
              </div>
            </div>
          </div>

          <!-- Right side action -->
          <div
            class="lg:col-span-3 p-5 sm:p-10 lg:p-12 flex flex-col justify-center items-center text-center bg-white overflow-hidden"
          >
            <div class="space-y-6 sm:space-y-8 w-full max-w-md">
              <div class="space-y-3 sm:space-y-4">
                <h3
                  class="text-xl sm:text-2xl md:text-3xl font-bold tracking-tight text-foreground font-display"
                >
                  Send us a Message
                </h3>
                <p class="text-muted-foreground leading-relaxed text-sm sm:text-base">
                  Ready to get started? Click the button below to open your email client and send us
                  a message directly.
                </p>
              </div>

              <a href="mailto:contact@gooseberryconsulting.com" class="block w-full group">
                <Button
                  className="w-full h-12 sm:h-14 md:h-16 bg-gradient-to-r from-blue-600 to-blue-500 hover:from-blue-700 hover:to-blue-600 text-white shadow-lg shadow-blue-500/25 hover:shadow-xl hover:shadow-blue-500/30 font-semibold text-sm sm:text-base md:text-lg rounded-xl transition-all duration-300 px-3 sm:px-4"
                >
                  <Mail className="w-4 h-4 sm:w-5 sm:h-5 mr-1.5 sm:mr-2.5 flex-shrink-0" />
                  <span class="truncate">contact@gooseberryconsulting.com</span>
                  <ArrowUpRight
                    className="w-3.5 h-3.5 sm:w-4 sm:h-4 ml-1.5 sm:ml-2 opacity-60 group-hover:opacity-100 group-hover:translate-x-0.5 group-hover:-translate-y-0.5 transition-all flex-shrink-0"
                  />
                </Button>
              </a>

              <p class="text-[10px] sm:text-xs text-muted-foreground/80">
                By contacting us, you agree to our privacy policy and terms of service.
              </p>
            </div>
          </div>
        </div>
      </CardContent>
    </Card>
  </div>
</section>
