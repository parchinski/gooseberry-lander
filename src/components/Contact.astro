---
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Textarea } from "@/components/ui/textarea";
import { Card, CardContent } from "@/components/ui/card";
import { Mail, ArrowRight } from "lucide-react";
---

<section id="contact" class="py-24 md:py-32 px-6 relative z-10">
    <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold tracking-tight mb-6">Ready to Elevate Your Event?</h2>
            <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                Let's discuss how we can build the perfect challenge set for your specific requirements.
            </p>
        </div>

        <Card className="border-border/40 shadow-lg bg-card/40 backdrop-blur-md">
            <CardContent className="p-8 md:p-12">
                <div class="grid md:grid-cols-2 gap-12 items-center">
                    <div class="space-y-6">
                        <div class="space-y-2">
                            <h3 class="text-2xl font-semibold tracking-tight">Get in Touch</h3>
                            <p class="text-muted-foreground">
                                Fill out the form or email us directly. We typically respond within 24 hours.
                            </p>
                        </div>

                        <div class="flex items-center gap-3 text-muted-foreground hover:text-accent transition-colors">
                            <div class="w-10 h-10 rounded-full bg-accent/10 flex items-center justify-center text-accent">
                                <Mail className="w-5 h-5" />
                            </div>
                            <a href="mailto:contact@gooseberryconsulting.com" class="font-medium">contact@gooseberryconsulting.com</a>
                        </div>
                    </div>

                    <form class="space-y-4">
                        <div class="grid gap-4">
                            <div class="grid gap-2">
                                <Input placeholder="Name" className="bg-background/40 border-border/40 focus:border-accent/50 focus:ring-accent/20 transition-all backdrop-blur-sm" />
                            </div>
                            <div class="grid gap-2">
                                <Input type="email" placeholder="Email" className="bg-background/40 border-border/40 focus:border-accent/50 focus:ring-accent/20 transition-all backdrop-blur-sm" />
                            </div>
                            <div class="grid gap-2">
                                <Textarea placeholder="How can we help?" className="min-h-[120px] bg-background/40 border-border/40 focus:border-accent/50 focus:ring-accent/20 transition-all resize-none backdrop-blur-sm" />
                            </div>
                        </div>
                        <Button className="w-full bg-accent hover:bg-accent/90 text-white shadow-lg shadow-accent/25 font-medium">
                            Send Message
                            <ArrowRight className="w-4 h-4 ml-2" />
                        </Button>
                    </form>
                </div>
            </CardContent>
        </Card>
    </div>
</section>