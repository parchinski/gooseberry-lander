---
import { Button } from "@/components/ui/button";
import { MobileNav } from "./MobileNav";
---

<header class="fixed top-0 left-0 right-0 z-50 pt-4 px-4 flex justify-center pointer-events-none">
    <nav class="w-full max-w-5xl bg-background/70 backdrop-blur-xl border border-white/20 shadow-[0_8px_30px_rgba(0,0,0,0.04)] rounded-full px-6 h-14 flex items-center justify-between pointer-events-auto transition-all hover:bg-background/80 hover:shadow-[0_8px_30px_rgba(0,0,0,0.08)]">
        <a href="/" class="flex items-center gap-3 group">
            <div class="relative flex items-center justify-center">
                <div class="absolute inset-0 rounded-full bg-accent/20 opacity-0 group-hover:opacity-100 blur-md transition-opacity duration-500"></div>
                <img src="/favicon.png" alt="Gooseberry" class="relative h-7 w-7 rounded-md shadow-sm group-hover:scale-105 transition-transform duration-300">
            </div>
            <span class="font-medium text-base tracking-tight hidden sm:block text-foreground/90 group-hover:text-foreground transition-colors">Gooseberry</span>
        </a>

        {/* Desktop Navigation */}
        <div class="hidden md:flex items-center gap-1">
            <a href="#services" class="text-sm font-medium text-muted-foreground hover:text-foreground px-4 py-2 rounded-full hover:bg-secondary/50 transition-all">Services</a>
            <a href="#about" class="text-sm font-medium text-muted-foreground hover:text-foreground px-4 py-2 rounded-full hover:bg-secondary/50 transition-all">About</a>
            <div class="pl-2">
                <Button asChild variant="default" size="sm" className="font-medium text-xs shadow-md shadow-accent/20 hover:shadow-accent/40">
                    <a href="#contact">Get in Touch</a>
                </Button>
            </div>
        </div>

        {/* Mobile Navigation */}
        <MobileNav client:load />
    </nav>
</header>