---
import { Button } from "@/components/ui/button";
import { MobileNav } from "./MobileNav";
---

<header
  class="fixed top-0 left-0 right-0 z-50 pt-3 sm:pt-5 px-3 sm:px-4 flex justify-center pointer-events-none"
>
  <nav
    class="w-full max-w-7xl bg-white/75 backdrop-blur-xl border border-slate-200/50 shadow-lg shadow-slate-900/5 rounded-xl sm:rounded-2xl px-4 sm:px-5 h-14 sm:h-16 flex items-center justify-between pointer-events-auto transition-all duration-300 hover:bg-white/85 hover:shadow-xl hover:shadow-slate-900/10"
  >
    <a href="/" class="flex items-center gap-2 sm:gap-3 group">
      <div class="relative flex items-center justify-center">
        <div
          class="absolute inset-0 rounded-lg sm:rounded-xl bg-blue-500/20 opacity-0 group-hover:opacity-100 blur-lg transition-opacity duration-500"
        >
        </div>
        <img
          src="/favicon.png"
          alt="Gooseberry"
          class="relative h-7 w-7 sm:h-8 sm:w-8 rounded-md sm:rounded-lg shadow-sm group-hover:scale-110 transition-transform duration-300"
        />
      </div>
      <span
        class="font-semibold text-sm sm:text-base tracking-tight hidden sm:block text-foreground group-hover:text-blue-600 transition-colors duration-300 font-display"
        >Gooseberry Consulting</span
      >
    </a>

    {/* Desktop Navigation */}
    <div class="hidden md:flex items-center gap-1">
      <a
        href="#services"
        class="text-sm font-medium text-muted-foreground hover:text-foreground px-4 py-2 rounded-xl hover:bg-slate-100 transition-all duration-200"
        >Services</a
      >
      <a
        href="#about"
        class="text-sm font-medium text-muted-foreground hover:text-foreground px-4 py-2 rounded-xl hover:bg-slate-100 transition-all duration-200"
        >About</a
      >
      <div class="pl-3 ml-2 border-l border-slate-200">
        <Button
          asChild
          variant="default"
          size="sm"
          className="font-semibold text-sm rounded-xl bg-gradient-to-r from-blue-600 to-blue-500 hover:from-blue-700 hover:to-blue-600 shadow-md shadow-blue-500/20 hover:shadow-lg hover:shadow-blue-500/30 transition-all duration-300"
        >
          <a href="#contact">Get in Touch</a>
        </Button>
      </div>
    </div>

    {/* Mobile Navigation */}
    <MobileNav client:load />
  </nav>
</header>
