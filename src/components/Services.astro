---
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from "@/components/ui/card";
import { Shield, Package, Search } from "lucide-react";

const services = [
  {
    title: "Custom Challenge Development",
    description: "We create scenarios tailored to your specific difficulty requirements ranging from entry-level web exploitation to advanced binary exploitation.",
    icon: Shield,
    gradient: "from-blue-500/40 to-cyan-500/40"
  },
  {
    title: "Challenge Bundles",
    description: "We offer pre-configured sets of challenges, such as OWASP Top 10 or Intro to Reverse Engineering, that are ready for immediate integration into your platform.",
    icon: Package,
    gradient: "from-violet-500/40 to-purple-500/40"
  },
  {
    title: "Technical QA & Maintenance",
    description: "We test, debug, and update your existing challenge repositories to ensure flags work correctly and vulnerabilities are stable.",
    icon: Search,
    gradient: "from-emerald-500/40 to-teal-500/40"
  }
];
---

<section id="services" class="py-24 md:py-32 px-6 relative overflow-hidden">
    {/* Ambient background gradient - Z-index fixed, removed bg-background from section */}
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[80vw] h-[80vw] max-w-[1200px] max-h-[1200px] bg-accent/20 rounded-full blur-[120px] -z-10 pointer-events-none mix-blend-screen"></div>
    
    <div class="max-w-7xl mx-auto relative z-10">
        <div class="text-center mb-20">
            <span class="inline-block py-1 px-3 rounded-full bg-accent/10 text-accent text-xs font-medium tracking-wide uppercase mb-4 border border-accent/20 backdrop-blur-sm">
                Capabilities
            </span>
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight mb-6 text-foreground">
                Comprehensive CTF Solutions
            </h2>
            <p class="text-lg text-muted-foreground max-w-2xl mx-auto leading-relaxed">
                From single custom challenges to complete event packages, we provide the technical backbone for world-class cybersecurity competitions.
            </p>
        </div>

        <div class="grid md:grid-cols-3 gap-6 lg:gap-8">
            {services.map((service) => (
                <Card className="relative border-border/40 bg-card/40 backdrop-blur-md hover:bg-card/60 hover:shadow-2xl hover:shadow-accent/10 hover:-translate-y-2 transition-all duration-500 ease-out group overflow-hidden">
                    {/* Card hover gradient */}
                    <div class={`absolute inset-0 bg-gradient-to-br ${service.gradient} opacity-0 group-hover:opacity-20 transition-opacity duration-700 ease-out`}></div>
                    
                    <CardHeader className="relative z-10">
                        <div class="w-14 h-14 rounded-xl bg-background/60 border border-white/10 shadow-sm flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-500 ease-[cubic-bezier(0.34,1.56,0.64,1)] text-accent group-hover:text-white group-hover:bg-accent">
                            <service.icon className="w-7 h-7 transition-colors duration-300" />
                        </div>
                        <CardTitle className="text-xl font-bold tracking-tight group-hover:text-accent transition-colors duration-300">
                            {service.title}
                        </CardTitle>
                    </CardHeader>
                    <CardContent className="relative z-10">
                        <CardDescription className="text-base leading-relaxed text-muted-foreground/90 group-hover:text-muted-foreground transition-colors duration-300">
                            {service.description}
                        </CardDescription>
                    </CardContent>
                </Card>
            ))}
        </div>
    </div>
</section>