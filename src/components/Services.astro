---
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from "@/components/ui/card";
import { Shield, Package, Search } from "lucide-react";

const services = [
  {
    title: "Custom Challenge Development",
    description: "We create scenarios tailored to your specific difficulty requirements ranging from entry-level web exploitation to advanced binary exploitation.",
    icon: Shield,
    gradient: "from-blue-500/40 to-cyan-500/40"
  },
  {
    title: "Challenge Bundles",
    description: "We offer pre-configured sets of challenges, such as OWASP Top 10 or Intro to Reverse Engineering, that are ready for immediate integration into your platform.",
    icon: Package,
    gradient: "from-violet-500/40 to-purple-500/40"
  },
  {
    title: "Technical QA & Maintenance",
    description: "We test, debug, and update your existing challenge repositories to ensure flags work correctly and vulnerabilities are stable.",
    icon: Search,
    gradient: "from-emerald-500/40 to-teal-500/40"
  }
];
---

<section id="services" class="py-24 md:py-32 px-6 bg-background relative overflow-hidden">
    {/* Ambient background gradient - Increased visibility */}
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[1000px] bg-accent/15 rounded-full blur-[100px] -z-10 pointer-events-none mix-blend-multiply dark:mix-blend-normal dark:bg-accent/10"></div>

    <div class="max-w-7xl mx-auto">
        <div class="text-center mb-20">
            <span class="inline-block py-1 px-3 rounded-full bg-accent/15 text-accent text-xs font-medium tracking-wide uppercase mb-4 border border-accent/25">
                Capabilities
            </span>
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight mb-6 text-foreground">
                Comprehensive CTF Solutions
            </h2>
            <p class="text-lg text-muted-foreground max-w-2xl mx-auto leading-relaxed">
                From single custom challenges to complete event packages, we provide the technical backbone for world-class cybersecurity competitions.
            </p>
        </div>

        <div class="grid md:grid-cols-3 gap-6 lg:gap-8">
            {services.map((service) => (
                <Card className="relative border-border/50 bg-card/60 backdrop-blur-md hover:bg-card hover:shadow-2xl hover:shadow-accent/10 hover:-translate-y-2 transition-all duration-300 group overflow-hidden">
                    {/* Card hover gradient - Increased visibility */}
                    <div class={`absolute inset-0 bg-gradient-to-br ${service.gradient} opacity-0 group-hover:opacity-15 transition-opacity duration-500`}></div>
                    
                    <CardHeader className="relative z-10">
                        <div class="w-14 h-14 rounded-xl bg-background/80 border border-border shadow-sm flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300 text-accent group-hover:text-white group-hover:bg-accent">
                            <service.icon className="w-7 h-7 transition-colors" />
                        </div>
                        <CardTitle className="text-xl font-bold tracking-tight group-hover:text-accent transition-colors">
                            {service.title}
                        </CardTitle>
                    </CardHeader>
                    <CardContent className="relative z-10">
                        <CardDescription className="text-base leading-relaxed text-muted-foreground/90 group-hover:text-muted-foreground">
                            {service.description}
                        </CardDescription>
                    </CardContent>
                </Card>
            ))}
        </div>
    </div>
</section>