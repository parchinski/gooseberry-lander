---
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from "@/components/ui/card";
import { Shield, Package, Search } from "lucide-react";

const services = [
  {
    title: "Custom Challenge Development",
    description: "We create scenarios tailored to your specific difficulty requirements ranging from entry-level web exploitation to advanced binary exploitation.",
    icon: Shield,
    gradient: "from-blue-500/20 to-cyan-500/20"
  },
  {
    title: "Challenge Bundles",
    description: "We offer pre-configured sets of challenges, such as OWASP Top 10 or Intro to Reverse Engineering, that are ready for immediate integration into your platform.",
    icon: Package,
    gradient: "from-violet-500/20 to-purple-500/20"
  },
  {
    title: "Technical QA & Maintenance",
    description: "We test, debug, and update your existing challenge repositories to ensure flags work correctly and vulnerabilities are stable.",
    icon: Search,
    gradient: "from-emerald-500/20 to-teal-500/20"
  }
];
---

<section id="services" class="py-24 md:py-32 px-6 bg-background relative overflow-hidden">
    {/* Ambient background gradient */}
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[1000px] bg-accent/5 rounded-full blur-3xl -z-10 pointer-events-none"></div>

    <div class="max-w-7xl mx-auto">
        <div class="text-center mb-20">
            <span class="inline-block py-1 px-3 rounded-full bg-accent/10 text-accent text-xs font-medium tracking-wide uppercase mb-4 border border-accent/20">
                Capabilities
            </span>
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight mb-6 text-foreground">
                Comprehensive CTF Solutions
            </h2>
            <p class="text-lg text-muted-foreground max-w-2xl mx-auto leading-relaxed">
                From single custom challenges to complete event packages, we provide the technical backbone for world-class cybersecurity competitions.
            </p>
        </div>

        <div class="grid md:grid-cols-3 gap-6 lg:gap-8">
            {services.map((service) => (
                <Card className="relative border-border/50 bg-card/50 backdrop-blur-sm hover:bg-card hover:shadow-xl hover:shadow-accent/5 hover:-translate-y-1 transition-all duration-300 group overflow-hidden">
                    <div class={`absolute inset-0 bg-gradient-to-br ${service.gradient} opacity-0 group-hover:opacity-100 transition-opacity duration-500`}></div>
                    
                    <CardHeader className="relative z-10">
                        <div class="w-12 h-12 rounded-lg bg-background border border-border shadow-sm flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300 text-accent">
                            <service.icon className="w-6 h-6" />
                        </div>
                        <CardTitle className="text-xl font-semibold tracking-tight group-hover:text-accent transition-colors">
                            {service.title}
                        </CardTitle>
                    </CardHeader>
                    <CardContent className="relative z-10">
                        <CardDescription className="text-base leading-relaxed text-muted-foreground/90">
                            {service.description}
                        </CardDescription>
                    </CardContent>
                </Card>
            ))}
        </div>
    </div>
</section>